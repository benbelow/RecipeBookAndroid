<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="@style/RecipeContent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/recipe_ingredient_amount"
        style="@style/Base.TextAppearance.AppCompat.SearchResult"
        android:textColor="@android:color/black"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/recipe_ingredient_units"
        style="@style/Base.TextAppearance.AppCompat.SearchResult"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingLeft="1dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/recipe_ingredient_name"
        style="@style/Base.TextAppearance.AppCompat.SearchResult"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/recipe_ingredient_comma"
        style="@style/Base.TextAppearance.AppCompat.SearchResult"
        android:textColor="@android:color/black"
        android:text=", ">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/recipe_ingredient_description"
        style="@style/Base.TextAppearance.AppCompat.SearchResult"
        android:textColor="@android:color/black">
    </TextView>


</LinearLayout>
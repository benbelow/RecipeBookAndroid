<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/recipe_image"
                android:layout_alignEnd="@+id/recipe_image"
                android:layout_alignRight="@+id/recipe_image"
                android:background="#64000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recipe_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Title of a recipe"/>

                <TextView
                    android:id="@+id/recipe_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="Benjamin Below" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/recipe_mealtype"
            style="@style/RecipeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            style="@style/RecipeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/person" />

            <TextView
                android:id="@+id/recipe_serving_number"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="4dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/recipe_scale_servings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ruler" />

        </LinearLayout>

        <LinearLayout
            style="@style/RecipeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/recipe_total_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="4dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recipe_ingredients_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/shadow_rectangle"
            android:orientation="vertical">

            <TextView
                style="@style/RecipeContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ingredients"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recipe_equipment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/shadow_rectangle"
            android:orientation="vertical">

            <TextView
                style="@style/RecipeContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Equipment"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recipe_instruction_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</ScrollView>